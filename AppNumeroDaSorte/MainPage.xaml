<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppNumeroDaSorte.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ScrollView>
        <VerticalStackLayout VerticalOptions="CenterAndExpand">
            <Image
                HeightRequest="115"
                Source="logo_green.png"
                WidthRequest="74" />
            <Label
                x:Name="NameApp"
                Margin="0,20,0,120"
                HorizontalOptions="Center"
                Text="Número da sorte Por José Mauro"
                TextColor="#00AB37"
                VerticalOptions="Center" />
            <VerticalStackLayout x:Name="ContainerLuckNumbers" IsVisible="False">
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Text="O número da sorte é: " />
                <HorizontalStackLayout
                    Margin="0,70"
                    HorizontalOptions="Center"
                    Spacing="5">
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber01"/>
                    </Border>
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber02"/>
                    </Border>
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber03"/>
                    </Border>
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber04"/>
                    </Border>
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber05"/>
                    </Border>
                    <Border
                        Padding="5,5"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8">
                        <Label
                            FontSize="20"
                            Text=""
                            TextColor="#00AB37"
                            x:Name="LuckNumber06"/>
                    </Border>
                </HorizontalStackLayout>
                <Label
                    Margin="0,0,0,50"
                    HorizontalOptions="Center"
                    Text="Boa sorte!" />
            </VerticalStackLayout>
            <Button Clicked="OnGenerateLuckNumbers" HorizontalOptions="Center" Text="Gerar número da sorte" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>