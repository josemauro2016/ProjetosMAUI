<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMauiGallery.Views.Layouts.StackLayoutPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="StackLayoutPage">
    <StackLayout Orientation="Vertical" Padding="20" Margin="20" Spacing="10">
        <Label Text="Olá Mundo!!" />

        <StackLayout Orientation="Horizontal" Spacing="10">
            <Button Text="Olá Mundo!! 1" HorizontalOptions="Start" />
            <Button Text="Olá Mundo!! 2" HorizontalOptions="Start" />
        </StackLayout>
        <VerticalStackLayout Spacing="10" Padding="10" BackgroundColor="Navy">
            <Label Text="Olá Mundo!! 1" />
            <Label Text="Olá Mundo!! 2" />
        </VerticalStackLayout>
        <HorizontalStackLayout Spacing="20" Padding="10" BackgroundColor="Navy">
            <Label Text="Olá Mundo!! 1" />
            <Label Text="Olá Mundo!! 2" />
        </HorizontalStackLayout>
        <Button Text="Olá Mundo!!" WidthRequest="200" HeightRequest="100" />
    </StackLayout>
</ContentPage>